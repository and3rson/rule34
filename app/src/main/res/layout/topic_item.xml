<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sticky:"
            android:id="@+id/topicIsSticky" android:padding="8dp" android:textStyle="bold" android:textColor="@color/dark"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thread title"
            android:id="@+id/topicTitle" android:layout_weight="1" android:padding="8dp"
            android:textColor="@color/dark"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1337"
            android:id="@+id/topicReplyCount" android:padding="8dp" android:textColor="@color/dark"/>
</LinearLayout>
